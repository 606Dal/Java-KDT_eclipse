<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- 콘솔 출력용 Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <!-- 로그 패턴 -->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %highlight{%-5level} %logger{36} - %msg%n" disableAnsi="false" />
        </Console>
    </Appenders>

    <Loggers>
        <!-- 애플리케이션 로거      / 로그 레벨 설정 -->
        <Logger name="org.example" level="info" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>

        <!-- 루트 로거 -->
        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>